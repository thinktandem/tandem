// .vuepress/style.styl, your extra styles.

@font-face
  font-family: "GalaxieCopernicus";
  font-weight: 300;
  src: url("/fonts/GalaxieCopernicus-Book.eot");
  src: url("/fonts/GalaxieCopernicus-Book.woff") format("woff"),
  url("/fonts/GalaxieCopernicus-Book.woff2") format("woff2"),

@font-face
  font-family: "GalaxieCopernicus";
  font-weight: 400;
  src: url("/fonts/GalaxieCopernicus-Medium.eot");
  src: url("/fonts/GalaxieCopernicus-Medium.woff") format("woff"),
  url("/fonts/GalaxieCopernicus-Medium.woff2") format("woff2"),

body
  font-family: "GalaxieCopernicus", PT Serif, serif

h1,
h2,
h3,
h4
  color: $landoGrey
  font-family: "Poppins", "Helvetica Neue", Arial, sans-serif
  font-size: 3em
  border: 0
  letter-spacing: -1px
h2
  font-size: 2em
h3
  font-size: 1.4em
h4
  font-size: 1.2em
a.header-anchor
  padding-right 0

blockquote
  padding 1.5rem 0 1.5rem 1.5rem
  font-size 1.3rem
  color lighten($landoPink, 25%)
  border-left 3px solid lighten($landoGrey, 50%)
  background lighten($landoBlue, 99%)
  font-style italic
